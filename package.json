{
  "name": "nimiq-auth",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.3.0",
  "description": "Add Login with Nimiq to your apps",
  "author": "onmax",
  "homepage": "https://github.com/onmax/nimiq-auth#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onmax/nimiq-auth.git"
  },
  "bugs": "https://github.com/onmax/nimiq-auth/issues",
  "keywords": [
    "nimiq",
    "auth"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run --filter ./packages/nuxt dev:prepare && pnpm run -r build",
    "dev": "pnpm --filter ./packages/* dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "nr test && nr build",
    "release": "bumpp -r",
    "start": "pnpm --filter ./packages/* start",
    "test": "vitest",
    "typecheck": "pnpm -r typecheck",
    "ci": "pnpm install && pnpm run --filter ./packages/nuxt dev:prepare && pnpm run lint && pnpm run typecheck && pnpm run build && pnpm run test",
    "prepare": "simple-git-hooks",
    "docs:dev": "pnpm --filter ./docs dev"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.1.1",
    "@antfu/ni": "^23.3.1",
    "@antfu/utils": "^8.1.0",
    "@nuxt/eslint-config": "^1.0.1",
    "@sisou/nimiq-ts": "npm:@jsr/sisou__nimiq-ts@^0.1.0",
    "@types/node": "^22.13.1",
    "bumpp": "^10.0.2",
    "eslint": "^9.20.0",
    "lint-staged": "^15.4.3",
    "pnpm": "^10.2.1",
    "simple-git-hooks": "^2.11.1",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "^6.1.0",
    "vitest": "catalog:"
  },
  "workspaces": [
    "docs/",
    "packages/*"
  ],
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
