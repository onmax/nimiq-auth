{
  "name": "nimiq-auth",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "description": "Add Nimiq Login to your apps",
  "author": "onmax",
  "homepage": "https://github.com/onmax/nimiq-auth#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onmax/nimiq-auth.git"
  },
  "bugs": "https://github.com/onmax/nimiq-auth/issues",
  "keywords": ["nimiq", "auth"],
  "sideEffects": false,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter ./packages/* dev",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp -r && pnpm publish",
    "start": "pnpm --filter ./packages/* start",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.1.0",
    "@antfu/ni": "^23.3.0",
    "@antfu/utils": "^8.1.0",
    "@types/node": "^22.12.0",
    "bumpp": "^10.0.1",
    "eslint": "^9.19.0",
    "lint-staged": "^15.4.3",
    "pnpm": "^9.15.4",
    "simple-git-hooks": "^2.11.1",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "^6.0.11",
    "vitest": "catalog:"
  },
  "workspaces": [
    "packages/*"
  ],
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
